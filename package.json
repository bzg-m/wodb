{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm --prefix frontend run dev",
		"build": "npm --prefix frontend run build",
		"preview": "npm --prefix frontend run preview",
		"test:all": "npm --prefix frontend run test && npm --prefix backend run test",
		"test:all:once": "npm --prefix frontend run test -- --run && npm --prefix backend run test -- --run",
		"emulator:start": "dotenv -e .env -- sh -c 'npx firebase emulators:start --only auth --project \"$FIREBASE_PROJECT_ID\"'",
		"server": "node --loader ts-node/esm backend/src/server.ts",
		"dev:full": "concurrently \"npm --prefix backend run dev\" \"sh -c 'npx wait-on http://localhost:4000/health && npm --prefix frontend run dev'\""
	},
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"preact": "^10.27.2",
		"preact-iso": "^2.11.0",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@preact/preset-vite": "^2.10.2",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/preact": "^3.2.4",
		"@testing-library/user-event": "^14.6.1",
		"@types/express": "^4.17.21",
		"autoprefixer": "^10.4.0",
		"concurrently": "^8.0.0",
		"dotenv-cli": "11.0.0",
		"eslint": "^9.39.1",
		"eslint-config-preact": "^2.0.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"firebase-tools": "^14.27.0",
		"globals": "^16.5.0",
		"jsdom": "^27.2.0",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vite": "^7.0.4",
		"vitest": "^4.0.13",
		"wait-on": "9.0.3"
	},
	"eslintConfig": {
		"extends": "preact"
	}
}
